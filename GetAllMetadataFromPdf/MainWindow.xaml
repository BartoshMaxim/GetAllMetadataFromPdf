<Window x:Class="GetAllMetadataFromPdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetAllMetadataFromPdf"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition />
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label x:Name="lblChoosePdf" FontSize="12" Grid.Column="0" Grid.Row="0">Choose PDF:</Label>
        <TextBox x:Name="fldPdfPath" FontSize="12" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Height="20"></TextBox>
        <Button x:Name="btnChoosePdf" FontSize="12" Grid.Column="3" Grid.Row="0" Height="20" Width="30" Click="btnChoosePdfClick">...</Button>
        <Button x:Name="btnInportMetaData" FontSize="12" Grid.Column="2" Grid.Row="1" Height="40" Click="btnInportMetaDataClick">Import ot Excel file</Button>
    </Grid>
</Window>
